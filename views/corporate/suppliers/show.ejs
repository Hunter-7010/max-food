<%- include('../../partials/hopeNavbar') %>
<%- include('../../partials/flash') %>
<div class="conatiner-fluid content-inner mt-5 py-0">
    <div class="row">                  
       <div class="col-lg-12">
          <div class="card   rounded">
             <div class="card-body">
                <div class="row">
                   <div class="col-6 mt-4">
                
                        <h1 class="mb-3">supplier: <%=suppliers.name%></h1>
                        <h3 class="mb-3">Address: <%=suppliers.address%></h3>
                        <h3 class="mb-3">Email: <%=suppliers.email%></h3>
                        <h3 class="mb-3">NIP: <%=suppliers.nip%></h3>
                        <h3 class="mb-3">Balance: <%=suppliers.balance%></h3>
                        
                        <p class="text-muted">Created: <%=suppliers.createdAt.toISOString().substring(0,10)%></p>
                             
            
                    <br>
                    <a href="/suppliers" class="mb-3">Back to All suppliers</a>
       
       <form action="/suppliers/<%=suppliers._id%>/edit" method="get" class="mt-5 mb-2">
       <button class="btn btn-primary" >Edit</button>
    </form>
       <form action="/suppliers/<%=suppliers._id%>?_method=DELETE" method="post">
           <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">DELETE</button>
       </form>
                </div>

                 
                </div>
                <div class="row">
                   <div class="col-sm-12">
                     <div  class="accordion" id="accordionExample">

                        <div class="accordion-item">  
                           <%for(let i=0; i <suppliers.activties.length; i++){%>   
                           <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=i%>" aria-expanded="false" aria-controls="collapseThree">
                             Activity <%=i+1%> 
                         </button>
                         <div id="collapse<%=i%>" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample" >
                             <div class="accordion-body">
                                 <strong><%=suppliers.activties[i]%></strong>
                             </div> 
                         </div>
                         <% } %> 
                       
                    </div>
                 </div>
                      
                   </div>
                </div>
             </div>
          </div>
       </div>                                    
    </div>
</div>
<%- include('../../partials/hopeFooter') %>