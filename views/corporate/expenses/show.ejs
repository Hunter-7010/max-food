<%- include('../../partials/hopeNavbar') %>
<%- include('../../partials/flash') %>
<div class="conatiner-fluid content-inner mt-5 py-0">
    <div class="row">                  
       <div class="col-lg-12">
          <div class="card   rounded">
             <div class="card-body">
                <div class="row">
                   <div class="col-sm-6">    
                     <h5>Client Name: <%=expenses.clientName%></h5>
                     <br>
                     <h5>Address: <%=expenses.clientAddress%></h5>
                 
                   </div>
                   <div class="col-sm-6"> 
                     <h5 class="text-muted">Created at: <%=expenses.createdAt.toISOString().substring(0,10)%></h5>
                     <br>
                     <li class="text-muted"><i class="fas fa-circle" style="color:#84B0CA ;"></i> <span
                        class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                        Unpaid</span></li>
                   </div>
                </div>
                <div class="row">
                   <div class="col-sm-12 mt-4">
                      <div class="table-responsive-lg">
                         <table class="table">
                            <thead>
                               <tr>
                                  <th class="text-center">Item</th>
                                  <th class="text-center" scope="col">Quantity</th>
                                  <th class="text-center" scope="col">Amount</th>
                                  <th class="text-center" scope="col">Price</th>
                                  <th class="text-center" scope="col">Totals</th>
                               </tr>
                            </thead>
                            <tbody>
                              <%for(let expense of expenses.items){%>
                               <tr>
                                 <td>
                                    <h6 class="mb-0"> <%=expense.name%> </h6>
                                 </td>
                                 
                                  <td class="text-center"><%=expense.quantity%></td>
                                  <td class="text-center"><%=expense.amount%></td>
                                  <td class="text-center"><%=expense.price%></td>
                                  <td class="text-center"><%=expense.price*expense.quantity%></td>
                               </tr>
                               <% } %>
                               <tr>
                                  <td>
                                     <h6 class="mb-0">Total</h6>
                                  </td>
                                  <td class="text-center"></td>
                                  <td class="text-center"></td>
                                  <td class="text-center"></td>
                                  <td class="text-center"><%=expenses.totalAmountAll%></td>
                               </tr>
                            
                            </tbody>
                         </table>
                      </div>
                   </div>                              
                </div>
                <div class="row">
                   <div class="col-sm-12">
                      <p class="mb-0 mt-4">
                         <svg width="30" class="text-primary mb-3 me-2" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect x="-0.757324" y="19.2427" width="28" height="4" rx="2" transform="rotate(-45 -0.757324 19.2427)" fill="currentColor"/>
                            <rect x="7.72803" y="27.728" width="28" height="4" rx="2" transform="rotate(-45 7.72803 27.728)" fill="currentColor"/>
                            <rect x="10.5366" y="16.3945" width="16" height="4" rx="2" transform="rotate(45 10.5366 16.3945)" fill="currentColor"/>
                            <rect x="10.5562" y="-0.556152" width="28" height="4" rx="2" transform="rotate(45 10.5562 -0.556152)" fill="currentColor"/>
                         </svg>
                         Notes:
                         <%=expenses.notes %> 
                      </p>
                   </div>
                   <div class="row">
                     <div class="col-sm-6 mt-4">
                        <form action="/expenses/<%=expenses._id%>/edit" method="get">
                           <button class="btn btn-primary">Edit</button>
                       </form>
                     </div>
                     <div class="col-sm-6">
                        <div class="d-flex justify-content-end mt-4">
                           <form action="/expenses/<%=expenses._id%>?_method=DELETE" method="POST">
                              <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">DELETE expense</button>
                          </form>
                        </div>
                     </div>

                     <div class="row">
                        <div class="col-sm-12 mt-5">
     
                             <div  class="accordion" id="accordionExample">
     
                                 <div class="accordion-item">  
                                    <%for(let i=0; i <expenses.activties.length; i++){%>   
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=i%>" aria-expanded="false" aria-controls="collapseThree">
                                      Activity <%=i+1%> 
                                  </button>
                                  <div id="collapse<%=i%>" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample" >
                                      <div class="accordion-body">
                                          <strong><%=expenses.activties[i]%></strong>
                                      </div> 
                                  </div>
                                  <% } %> 
                                
                             </div>
                          </div>
                           
                        </div>
                     </div>

                   </div>
                </div>
             </div>
          </div>
       </div>                                    
    </div>
</div>
<%- include('../../partials/hopeFooter') %>