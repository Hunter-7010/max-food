<%- include('../../partials/hopeNavbar') %>
<%- include('../../partials/flash') %>
<div class="conatiner-fluid content-inner mt-5 py-0">
    <div class="row">                  
       <div class="col-lg-12">
          <div class="card   rounded">
             <div class="card-body">
                <div class="row">
                   <div class="col-6 mt-4">
                
                        <h1 class="mb-3">item: <%=items.itemName%></h1>
                        <h3 class="mb-3">Price: <%=items.price%></h3>
                        <h3 class="mb-3">Quantity: <%=items.quantity%></h3>
                        <h3 class="mb-3">Amount: <%=items.amount%> <%=items.unit %> </h3>
                        
                        <p class="text-muted">Created: <%=items.createdAt.toISOString().substring(0,10)%></p>
                    
                    <a href="/items" class="mb-3">Back to All items</a>
       
       <form action="/items/<%=items._id%>/edit" method="get" class="mt-5 mb-2">
       <button class="btn btn-primary" >Edit</button>
    </form>
       <form action="/items/<%=items._id%>?_method=DELETE" method="post">
           <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">DELETE</button>
       </form>
                </div>

                 
                </div>
                <div class="row">
                   <div class="col-sm-12">
                     <div  class="accordion" id="accordionExample">

                        <div class="accordion-item">  
                           <%for(let i=0; i <items.activties.length; i++){%>   
                           <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=i%>" aria-expanded="false" aria-controls="collapseThree">
                             Activity <%=i+1%> 
                         </button>
                         <div id="collapse<%=i%>" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample" >
                             <div class="accordion-body">
                                 <strong><%=items.activties[i]%></strong>
                             </div> 
                         </div>
                         <% } %> 
                       
                    </div>
                 </div>
                      
                   </div>
                </div>
             </div>
          </div>
       </div>                                    
    </div>
</div>
<%- include('../../partials/hopeFooter') %>