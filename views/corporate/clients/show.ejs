<%- include('../../partials/hopeNavbar') %>
<%- include('../../partials/flash') %>
<div class="conatiner-fluid content-inner mt-5 py-0">
    <div class="row">                  
       <div class="col-lg-12">
          <div class="card   rounded">
             <div class="card-body">
                <div class="row">
                   <div class="col-6 mt-4">
                
                        <h1 class="mb-3">Client: <%=clients.name%></h1>
                        <h3 class="mb-3">Address: <%=clients.address%></h3>
                        <h3 class="mb-3">Route: <%=clients.route%></h3>
                        <h3 class="mb-3">Email: <%=clients.email%></h3>
                        <h3 class="mb-3">NIP: <%=clients.nip%></h3>
                        <h3 class="mb-3">Balance: <%=clients.balance%></h3>
                        
                        <p class="text-muted">Created: <%=clients.createdAt.toISOString().substring(0,10)%></p>
                             
                    <h5><a href="/clients/<%=clients._id%>/specialPrice">Special Price</a></h5>
                    <br>
                    <h6><a href="/clients/orders/<%=clients._id%>">All orders created</a></h6>       
                    <br>
                    <a href="/clients" class="mb-3">Back to All clients</a>
       
       <form action="/clients/<%=clients._id%>/edit" method="get" class="mt-5 mb-2">
       <button class="btn btn-primary" >Edit</button>
    </form>
       <form action="/clients/<%=clients._id%>?_method=DELETE" method="post">
           <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">DELETE</button>
           <a data-bs-toggle="tooltip" data-bs-original-title="Deleting a client will result in not showing orders or ledgers">                                
           <svg width="27" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">                                   
           <path fill-rule="evenodd" clip-rule="evenodd" d="M4.81409 20.4368H19.1971C20.7791 20.4368 21.7721 18.7267 20.9861 17.3527L13.8001 4.78775C13.0091 3.40475 11.0151 3.40375 10.2231 4.78675L3.02509 17.3518C2.23909 18.7258 3.23109 20.4368 4.81409 20.4368Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>                                    
           <path d="M12.0024 13.4147V10.3147" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>                                    
           <path d="M11.995 16.5H12.005" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>                                
         </svg>                            
         </a>

       </form>
                </div>

                 
                </div>
                <div class="row">
                   <div class="col-sm-12 mt-5">

                        <div  class="accordion" id="accordionExample">

                            <div class="accordion-item">  
                               <%for(let i=0; i <clients.activties.length; i++){%>   
                               <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%=i%>" aria-expanded="false" aria-controls="collapseThree">
                                 Activity <%=i+1%> 
                             </button>
                             <div id="collapse<%=i%>" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample" >
                                 <div class="accordion-body">
                                     <strong><%=clients.activties[i]%></strong>
                                 </div> 
                             </div>
                             <% } %> 
                           
                        </div>
                     </div>
                      
                   </div>
                </div>
             </div>
          </div>
       </div>                                    
    </div>
</div>
<%- include('../../partials/hopeFooter') %>