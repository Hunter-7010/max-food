                        <div class="mt-2">
                           <h2 class="counter"><%=totalEx%></h2>
                        </div>
                     </div>
                     <div>
                        <span class="badge bg-primary">Expenses(this month)</span>
                     </div>
                  </div>
                 
                  <div class="mt-3">
                     <div class="progress bg-soft-primary shadow-none w-100" style="height: 6px">
                        <div class="progress-bar bg-primary" data-toggle="progress-bar" role="progressbar" aria-valuenow="24" aria-valuemin="0" aria-valuemax="100"></div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="card">
