<%- include('../partials/hopeNavbar') %>
<%- include('../partials/flash')%>
<div class="conatiner-fluid content-inner pb-0">
    <div>
        <div class="row">
           <div class="col-lg-4 col-md-6">
              <div class="card">
                 <div class="card-body">
                    <div class="text-center">Loss this Month</div>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                       <div>
                          <%if(totalMonth-totalEx <= totalEx-totalMonth) {%> 
                          <h2 class="counter"><%= totalMonth-totalEx%></h2>
                           <% } else {%>
                              <h2 class="counter">No Loss</h2>
                              <% } %>  
                       </div>
                       <div class="border  bg-soft-danger rounded p-3">
                        <a data-bs-toggle="tooltip"  data-bs-original-title="Bar show progress to projected(10 000zl) value">
                          <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px"  fill="none" viewBox="0 0 24 24" stroke="currentColor">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                          </svg>
                         </a>
                       </div>
                    </div>
                    <div class="mt-4"> 
                       <div class="progress bg-soft-danger shadow-none w-100" style="height: 6px">
                          <div class="progress-bar bg-danger" data-toggle="progress-bar" role="progressbar" aria-valuenow="<%=Math.round(totalEx-totalMonth/10000 *100)%>" aria-valuemin="0" aria-valuemax="100"></div>
                       </div>
                    </div>
                 </div>
              </div>
           </div>
           <div class="col-lg-4 col-md-6">
              <div class="card">
                 <div class="card-body">
                    <div class="text-center">Revenue(this month)</div>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                       <div>
                             <h2 class="counter"><%=totalMonth%></h2>
                          <%=Math.round(totalMonth/500000 *100)%>%
                       </div>
                       <div class="border bg-soft-info rounded p-3">
                        <a data-bs-toggle="tooltip"  data-bs-original-title="Bar and % show progress to projected(500 000zl) value">
                          <svg xmlns="http://www.w3.org/2000/svg"  width="20px" height="20px" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                          </svg>
                        </a>
                       </div>
                    </div>
                    <div class="mt-4">
                       <div class="progress bg-soft-info shadow-none w-100" style="height: 6px">
                          <div class="progress-bar bg-info" data-toggle="progress-bar" role="progressbar" aria-valuenow="<%=totalMonth/500000 *100%>" aria-valuemin="0" aria-valuemax="100"></div>
                       </div>
                    </div>
                 </div>
              </div>
           </div>
           <div class="col-lg-4 col-md-6">
              <div class="card">
                 <div class="card-body">
                    <div class="text-center">Profit(this month)</div>
                    <div class="d-flex align-items-center justify-content-between mt-3">
                       <div>
                             <h2 class="counter"><%=Math.round(totalMonth - totalActual)%></h2>
                             <%=Math.round((totalMonth - totalActual)/100000 *100)%>%
                       </div>
                       <div class="border bg-soft-success rounded p-3">
                        <a data-bs-toggle="tooltip"  data-bs-original-title="Bar and % show progress to projected(100 000zl) value">
                          <svg xmlns="http://www.w3.org/2000/svg"  width="20px" height="20px" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                          </svg>
                        </a>
                       </div>
                    </div>
                    <div class="mt-4">
                       <div class="progress bg-soft-success shadow-none w-100" style="height: 6px">
                          <div class="progress-bar bg-success" data-toggle="progress-bar" role="progressbar" aria-valuenow="<%=(totalMonth - totalActual)/100000 *100%>" aria-valuemin="0" aria-valuemax="100"></div>
                       </div>
                    </div>
                 </div>
              </div>
           </div>
       
           <div class="col-lg-4 col-md-6">
              <div class="card">
                 <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                       <div class="bg-info text-white rounded p-3">
